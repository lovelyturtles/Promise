<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Promise" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>

        <item name="materialButtonStyle">@style/Theme.Promise.Button</item>
        <item name="editTextStyle">@style/Theme.Promise.EditText</item>
        <item name="android:editTextBackground">@drawable/rounded_corner_gray</item>

    </style>

    <style name="Theme.Promise.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">#FAFAFA</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">@dimen/gap_sm</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemTextColor">@color/text_body</item>
        <item name="itemIconTint">@color/text_heading</item>
        <item name="itemPadding">0dp</item>
        <item name="itemIconSize">20dp</item>
        <item name="checkedIconTint">@color/gray_600</item>
    </style>

    <!--    Form Styles-->

    <style name="Theme.Promise.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.Promise.EditText" parent="Widget.AppCompat.EditText">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginBottom">@dimen/gap_lg</item>
    </style>

    <style name="Theme.Promise.InputLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginBottom">@dimen/input_label_gap</item>
    </style>

    <style name="Theme.Promise.CollapsingToolbarLayout" parent="Widget.Design.CollapsingToolbar">
        <item name="expandedTitleMarginStart">@dimen/gap_lg</item>
        <item name="expandedTitleMarginBottom">@dimen/gap_lg</item>
    </style>

    <style name="Theme.Promise.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/primary</item>
<!--        <item name="android:layout_margin">@dimen/gap_lg</item>-->
    </style>

    <!-- Typographic Styles -->

    <style name="Theme.Promise.TextAppearance.Body" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="Theme.Promise.TextAppearance.CardTitle" parent="@style/TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">18dp</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textColor">@color/text_heading</item>
    </style>

    <style name="Theme.Promise.TextAppearance.ListItemTitle" parent="@style/TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">14dp</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textColor">@color/text_heading</item>
    </style>

</resources>